{
  "name": "document-writer",
  "displayName": "Document Writer with AI",
  "description": "Create professional documents with AI assistance and Cline integration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "documentWriter.documentAssistant",
          "name": "Document Assistant",
          "icon": "$(assistant)",
          "contextualTitle": "Document Assistant"
        },
        {
          "id": "documentWriter.documentExplorer",
          "name": "Document Explorer",
          "icon": "$(file-text)",
          "contextualTitle": "Document Explorer"
        },
        {
          "id": "documentWriter.versionHistory",
          "name": "Version History",
          "icon": "$(history)",
          "contextualTitle": "Document Version History"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "document-writer.refreshTreeView",
          "when": "view == documentWriter.documentExplorer",
          "group": "navigation"
        },
        {
          "command": "document-writer.createDocument",
          "when": "view == documentWriter.documentExplorer",
          "group": "navigation"
        },
        {
          "command": "document-writer.addTemplate",
          "when": "view == documentWriter.documentExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "document-writer.openTemplate",
          "when": "view == documentWriter.documentExplorer && viewItem == template",
          "group": "1_open"
        },
        {
          "command": "document-writer.editTemplate",
          "when": "view == documentWriter.documentExplorer && viewItem == template",
          "group": "2_edit"
        },
        {
          "command": "document-writer.cloneTemplate",
          "when": "view == documentWriter.documentExplorer && viewItem == template",
          "group": "2_edit"
        },
        {
          "command": "document-writer.deleteTemplate",
          "when": "view == documentWriter.documentExplorer && viewItem == template",
          "group": "3_manage"
        },
        {
          "command": "document-writer.openDocument",
          "when": "view == documentWriter.documentExplorer && viewItem == document",
          "group": "1_open"
        },
        {
          "command": "documentWriter.loadVersion",
          "when": "view == documentWriter.versionHistory && viewItem == version",
          "group": "1_actions"
        },
        {
          "command": "documentWriter.compareVersions",
          "when": "view == documentWriter.versionHistory && viewItem == version",
          "group": "1_actions"
        },
        {
          "command": "documentWriter.renameVersion",
          "when": "view == documentWriter.versionHistory && viewItem == version",
          "group": "2_manage"
        },
        {
          "command": "documentWriter.deleteVersion",
          "when": "view == documentWriter.versionHistory && viewItem == version",
          "group": "2_manage"
        }
      ]
    },
    "modelContextProtocol": {
      "servers": [
        {
          "name": "document-writer",
          "displayName": "Document Writer",
          "description": "Create and manage documents with AI assistance",
          "isIncludedByDefault": true,
          "type": "nodejs"
        }
      ]
    },
    "commands": [
      {
        "command": "document-writer.test",
        "title": "Test Extension",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.createDocument",
        "title": "Create New Document",
        "category": "Document Writer",
        "icon": "$(add)"
      },
      {
        "command": "document-writer.generateFromTemplate",
        "title": "Generate from Template",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.refreshTreeView",
        "title": "Refresh",
        "category": "Document Writer",
        "icon": "$(refresh)"
      },
      {
        "command": "document-writer.addTemplate",
        "title": "Add Template",
        "category": "Document Writer",
        "icon": "$(file-add)"
      },
      {
        "command": "document-writer.openTemplate",
        "title": "Open Template",
        "category": "Document Writer",
        "icon": "$(open-preview)"
      },
      {
        "command": "document-writer.editTemplate",
        "title": "Edit Template",
        "category": "Document Writer",
        "icon": "$(edit)"
      },
      {
        "command": "document-writer.cloneTemplate",
        "title": "Clone Template",
        "category": "Document Writer",
        "icon": "$(copy)"
      },
      {
        "command": "document-writer.deleteTemplate",
        "title": "Delete Template",
        "category": "Document Writer",
        "icon": "$(trash)"
      },
      {
        "command": "document-writer.openDocument",
        "title": "Open Document",
        "category": "Document Writer",
        "icon": "$(open-preview)"
      },
      {
        "command": "document-writer.openEditor",
        "title": "Open Editor",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.saveDocument",
        "title": "Save Document",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.previewDocument",
        "title": "Preview Document",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.generateDocument",
        "title": "Generate Document",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.exportToPdf",
        "title": "Export to PDF",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.exportToHtml",
        "title": "Export to HTML",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.exportToMarkdown",
        "title": "Export to Markdown",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.addToFavorites",
        "title": "Add to Favorites",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.createFromTemplate",
        "title": "Create from Template",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.createCategory",
        "title": "Create Category",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.renameCategory",
        "title": "Rename Category",
        "category": "Document Writer"
      },
      {
        "command": "document-writer.deleteCategory",
        "title": "Delete Category",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.showWizard",
        "title": "Show Document Creation Wizard",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.exportDocument",
        "title": "Export Current Document",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.analyzeDocument",
        "title": "Analyze Document",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.generateChart",
        "title": "Generate Chart",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.openTemplateManager",
        "title": "Open Template Manager",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.showAssistant",
        "title": "Show Document Assistant",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.previewDocument",
        "title": "Preview Document",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.showQuickActions",
        "title": "Show Quick Actions",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.showAiStatus",
        "title": "Show AI Connection Status",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.showDetailedStats",
        "title": "Show Document Statistics",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.exportProject",
        "title": "Export Project",
        "category": "Document Writer",
        "icon": "$(export)"
      },
      {
        "command": "documentWriter.importProject",
        "title": "Import Project",
        "category": "Document Writer",
        "icon": "$(folder-opened)"
      },
      {
        "command": "documentWriter.createProjectTemplate",
        "title": "Create Project from Template",
        "category": "Document Writer",
        "icon": "$(file-directory-create)"
      },
      {
        "command": "documentWriter.shareDocument",
        "title": "Share Document",
        "category": "Document Writer",
        "icon": "$(link)"
      },
      {
        "command": "documentWriter.viewSharedDocuments",
        "title": "View Shared Documents",
        "category": "Document Writer",
        "icon": "$(link-external)"
      },
      {
        "command": "documentWriter.openSharedDocument",
        "title": "Open Shared Document",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.saveVersion",
        "title": "Save Version",
        "category": "Document Writer",
        "icon": "$(save)"
      },
      {
        "command": "documentWriter.showVersionHistory",
        "title": "Show Version History",
        "category": "Document Writer",
        "icon": "$(history)"
      },
      {
        "command": "documentWriter.loadVersion",
        "title": "Load Version",
        "category": "Document Writer"
      },
      {
        "command": "documentWriter.compareVersions",
        "title": "Compare with Current",
        "category": "Document Writer",
        "icon": "$(diff)"
      },
      {
        "command": "documentWriter.deleteVersion",
        "title": "Delete Version",
        "category": "Document Writer",
        "icon": "$(trash)"
      },
      {
        "command": "documentWriter.renameVersion",
        "title": "Rename Version",
        "category": "Document Writer",
        "icon": "$(edit)"
      },
      {
        "command": "documentWriter.printPreview",
        "title": "Print Preview",
        "category": "Document Writer",
        "icon": "$(file-media)"
      },
      {
        "command": "documentWriter.printSettings",
        "title": "Print Settings",
        "category": "Document Writer",
        "icon": "$(settings-gear)"
      },
      {
        "command": "documentWriter.quickPrint",
        "title": "Quick Print",
        "category": "Document Writer",
        "icon": "$(file-binary)"
      }
    ],
    "keybindings": [
      {
        "command": "document-writer.saveDocument",
        "key": "ctrl+s",
        "mac": "cmd+s",
        "when": "activeWebviewPanelId == 'documentWriter.documentEditor'"
      },
      {
        "command": "document-writer.generateDocument",
        "key": "ctrl+g",
        "mac": "cmd+g",
        "when": "activeWebviewPanelId == 'documentWriter.documentEditor'"
      },
      {
        "command": "documentWriter.showWizard",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n"
      },
      {
        "command": "documentWriter.showQuickActions",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "activeWebviewPanelId == 'documentWriter.documentEditor'"
      },
      {
        "command": "documentWriter.exportDocument",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "activeWebviewPanelId == 'documentWriter.documentEditor'"
      },
      {
        "command": "documentWriter.showAssistant",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "documentWriter.previewDocument",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "activeWebviewPanelId == 'documentWriter.documentEditor'"
      },
      {
        "command": "documentWriter.showDetailedStats",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "activeWebviewPanelId == 'documentWriter.documentEditor'"
      },
      {
        "command": "documentWriter.exportProject",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      },
      {
        "command": "documentWriter.importProject",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o"
      },
      {
        "command": "documentWriter.shareDocument",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s"
      },
      {
        "command": "documentWriter.saveVersion",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v"
      },
      {
        "command": "documentWriter.showVersionHistory",
        "key": "ctrl+h",
        "mac": "cmd+h"
      },
      {
        "command": "documentWriter.printPreview",
        "key": "ctrl+p",
        "mac": "cmd+p",
        "when": "activeWebviewPanelId == 'documentWriter.documentEditor' || editorTextFocus"
      },
      {
        "command": "documentWriter.quickPrint",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "activeWebviewPanelId == 'documentWriter.documentEditor' || editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Document Writer",
      "properties": {
        "documentWriter.defaultAuthor": {
          "type": "string",
          "default": "",
          "description": "Default author name for documents"
        },
        "documentWriter.outputPath": {
          "type": "string",
          "default": "./generated-documents",
          "description": "Default output path for generated documents"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack-prod",
    "compile": "webpack --mode development",
    "watch": "webpack --watch --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.mjs",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.mjs",
    "test:full": "npm run compile && npm run lint && node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.mjs",
    "webpack": "webpack --mode development",
    "webpack-prod": "webpack --mode production"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.41",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/pdfkit": "^0.13.9",
    "@types/showdown": "^2.0.6",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "bufferutil": "^4.0.9",
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.8.3",
    "utf-8-validate": "^6.0.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/marked": "^5.0.2",
    "@types/turndown": "^5.0.5",
    "canvas": "^3.1.0",
    "canvg": "^4.0.3",
    "chart.js": "^4.4.9",
    "chokidar": "^3.5.3",
    "docx": "^9.5.0",
    "docxtemplater": "^3.45.0",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "jsdom": "^26.1.0",
    "mammoth": "^1.9.1",
    "marked": "^15.0.12",
    "pdfkit": "^0.17.1",
    "pizzip": "^3.1.4",
    "puppeteer": "^24.10.0",
    "showdown": "^2.1.0",
    "turndown": "^7.2.0"
  }
}
